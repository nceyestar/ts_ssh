<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="default" extends="struts-default">
		<action name="findByAuthorAction" class="poetMgnAction" method="showTSListByAuthor">
			<result name="success">showTSList.jsp</result>
			<result name="fail">noSet.jsp</result>
		</action>
		
		<action name="findByTitleAction" class="poetMgnAction" method="showTSbyTitle">
			<result name="success">showTSContent.jsp</result>
			<result name="fail">noSet.jsp</result>
		</action>
		
		<action name="findByContentAction" class="poetMgnAction" method="showTSContext">
			<result name="success">showTSContent.jsp</result>
			<result name="fail">noSet.jsp</result>
		</action>
		
	</package>

</struts>    
